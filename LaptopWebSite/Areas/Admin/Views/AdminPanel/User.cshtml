
@{
    ViewBag.Title = "User";
}

<div style="height:900px; padding:10px; background-color:#e9ecf3">
    <div class="container-fluid">
        <div class="row">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Users</span>
                    </div>

                </div>
                <div class="table">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable"
                           id="sample_1_2" role="grid" aria-describedby="sample_1_2_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 103px;">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                        <input type="checkbox" class="group-checkable" data-set="#sample_1_2 .checkboxes">
                                        <span></span>
                                    </label>
                                </th>
                                <th class="sorting_asc" tabindex="0" aria-controls="sample_1_2" rowspan="1" colspan="1"
                                    aria-sort="ascending" aria-label=" Id : activate to sort column descending" style="width: 254px;">
                                    Id
                                </th>
                                <th class="sorting_asc" tabindex="0" aria-controls="sample_1_2" rowspan="1" colspan="1"
                                    aria-sort="ascending" aria-label=" Username : activate to sort column descending" style="width: 254px;">
                                    Username
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="sample_1_2" rowspan="1"
                                    colspan="1" aria-label=" Email : activate to sort column ascending" style="width: 372px;">
                                    Email
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="sample_1_2" rowspan="1" colspan="1"
                                    aria-label=" Role : activate to sort column ascending" style="width: 208px;">Role</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyStudent"></tbody>
                    </table>
                    <button class="btn green btn-outline" onclick="deleteSelectedUser()"><strong>DELETE SELECTED USERS</strong></button>
                </div>
            </div>
        </div>
    </div>
</div>

